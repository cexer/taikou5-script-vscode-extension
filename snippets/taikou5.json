{
  "Event": {
    "prefix": "事件",
    "body": [
      "事件:${1:事件名稱}{",
      "\t屬性:${2:一次｜多次}",
      "\t發生契機:${3:遊戲開始時}",
      "\t發生條件:{",
      "\t\t${4}",
      "\t}",
      "\t執行:{",
      "\t\t${0}",
      "\t}",
      "}"
    ],
    "description": "创建事件"
  },
  "Function": {
    "prefix": "功能",
    "body": [
      "功能:${1:功能名}{",
      "\t執行:(${2:參數}){",
      "\t\t${0}",
      "\t}",
      "}"
    ],
    "description": "创建功能"
  },
  "Branch": {
    "prefix": "分歧",
    "body": [
      "分歧:(${1:真}){",
      "\t${0}",
      "}"
    ],
    "description": "条件分支"
  },
  "Loop": {
    "prefix": "循環",
    "body": [
      "循環:{",
      "\t${0}",
      "\t脫出模塊:(真)",
      "}"
    ],
    "description": "循环块"
  },
  "Message": {
    "prefix": "消息",
    "body": [
      "消息:[[${1:文本}]]"
    ],
    "description": "显示消息"
  },
  "Dialogue": {
    "prefix": "對話",
    "body": [
      "對話:(${1:说话人},${2:听话人})[[${3:文本}]]"
    ],
    "description": "对话"
  },
  "Investigation": {
    "prefix": "調查",
    "body": [
      "調查:(${1:值1})${2:==}(${3:值2})"
    ],
    "description": "调查/条件判断"
  },
  "Update": {
    "prefix": "更新",
    "body": [
      "更新:(${1:对象.属性})(${2:值})"
    ],
    "description": "更新值"
  },
  "Assign": {
    "prefix": "代入",
    "body": [
      "代入${1:變量}:(${2:值})"
    ],
    "description": "赋值"
  },
  "Call": {
    "prefix": "調用",
    "body": [
      "調用:${1:功能名}(${2:參數})"
    ],
    "description": "调用功能"
  }
}
